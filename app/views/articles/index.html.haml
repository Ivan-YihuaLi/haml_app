%h1
  Articles Listing Page

%div{:style => "margin-bottom: 20px"}
  = link_to "New Article", new_article_path


%table{:cellspacing => "0", :cellpadding => "3px", :border => "1px solid"}
  %thead
    %tr
      %th
        = "Title"
      %th
        = "Description"
      %th{:colspan => "3"}
        = "Actions"
    %tbody
      - @articles.each do |article|
        %tr
          %td
            = article.title
          %td
            = article.description
          %td
            = link_to "View", article_path(article.id)
          %td
            = link_to "Edit", edit_article_path(article.id)
          %td
            = link_to "Delete", article_path(article.id), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }
